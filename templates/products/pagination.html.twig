{#
/**
 * @file
 * Twitter Bootstrap v4 Sliding pagination control implementation.
 *
 * View that can be used with the pagination module
 * from the Twitter Bootstrap CSS Toolkit
 * https://getbootstrap.com/docs/4.5/components/pagination/
 *
 */
#}
{% if pageCount > 1 %}
<div class="Pagination">
    <div class="Pagination-ins">


            {% if previous is defined %}
                    <a class="Pagination-element Pagination-element_prev" rel="prev" href="{{ path(route, query|merge({(pageParameterName): previous})) }}">
                        <img src="/assets/img/icons/prevPagination.svg" alt="prevPagination.svg">
                    </a>
            {% else %}
                    <a class="Pagination-element Pagination-element_prev" rel="prev" href="#">
                        <img src="/assets/img/icons/prevPagination.svg" alt="prevPagination.svg">
                    </a>
            {% endif %}

            {% if startPage > 1 %}

                    <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): 1})) }}">1</a>


                {% if startPage == 3 %}

                        <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): 2})) }}">2</a>


                {% elseif startPage != 2 %}

                        <span class="page-link">&hellip;</span>

                {% endif %}
            {% endif %}

            {% for page in pagesInRange %}
                {% if page != current %}

                    <a class="Pagination-element" href="{{ path(route, query|merge({(pageParameterName): page})) }}">
                        <span class="Pagination-text">{{ page }}</span>
                    </a>

                {% else %}
                    <a class="Pagination-element Pagination-element_current" href="#"><span class="Pagination-text">{{ page }}</span></a>
                {% endif %}

            {% endfor %}

            {% if pageCount > endPage %}
                {% if pageCount > (endPage + 1) %}
                    {% if pageCount > (endPage + 2) %}
                            <span class="page-link">&hellip;</span>
                    {% else %}
                            <a class="Pagination-element" href="{{ path(route, query|merge({(pageParameterName): (pageCount - 1)})) }}">
                                <span class="Pagination-text">{{ pageCount -1 }}</span>
                            </a>
                    {% endif %}
                {% endif %}
                    <a class="Pagination-element" href="{{ path(route, query|merge({(pageParameterName): pageCount})) }}">
                        <span class="Pagination-text">{{ pageCount }}</span>
                    </a>
            {% endif %}


            {% if next is defined %}
                    <a class="Pagination-element Pagination-element_prev" href="{{ path(route, query|merge({(pageParameterName): next})) }}">
                        <img src="/assets/img/icons/nextPagination.svg" alt="nextPagination.svg">
                    </a>
            {% else %}
                <a class="Pagination-element Pagination-element_prev" href="#">
                    <img src="/assets/img/icons/nextPagination.svg" alt="nextPagination.svg">
                </a>
            {% endif %}


    </div>
</div>
{% endif %}